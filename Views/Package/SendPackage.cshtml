@model SendPackageViewModel
@{
    ViewData["Title"] = "Send New Package";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="SendPackage" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h4>Recipient Information</h4>
            <div class="form-group mb-2">
                <label asp-for="RecipientEmail" class="control-label"></label>
                <input asp-for="RecipientEmail" class="form-control" />
                <span asp-validation-for="RecipientEmail" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="RecipientFirstName" class="control-label"></label>
                <input asp-for="RecipientFirstName" class="form-control" />
                <span asp-validation-for="RecipientFirstName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="RecipientLastName" class="control-label"></label>
                <input asp-for="RecipientLastName" class="form-control" />
                <span asp-validation-for="RecipientLastName" class="text-danger"></span>
            </div>

            <hr />
            <h4>Origin Address</h4>
            <div class="form-group mb-2">
                <label asp-for="OriginStreet" class="control-label"></label>
                <input asp-for="OriginStreet" class="form-control" />
                <span asp-validation-for="OriginStreet" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-2">
                        <label asp-for="OriginCity" class="control-label"></label>
                        <input asp-for="OriginCity" class="form-control" />
                        <span asp-validation-for="OriginCity" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group mb-2">
                        <label asp-for="OriginZipCode" class="control-label"></label>
                        <input asp-for="OriginZipCode" class="form-control" />
                        <span asp-validation-for="OriginZipCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                     <div class="form-group mb-3">
                        <label asp-for="OriginCountry" class="control-label"></label>
                        <input asp-for="OriginCountry" class="form-control" />
                        <span asp-validation-for="OriginCountry" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <hr />
            <h4>Destination Address</h4>
            <div class="form-group mb-2">
                <label asp-for="DestinationStreet" class="control-label"></label>
                <input asp-for="DestinationStreet" class="form-control" />
                <span asp-validation-for="DestinationStreet" class="text-danger"></span>
            </div>
             <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-2">
                        <label asp-for="DestinationCity" class="control-label"></label>
                        <input asp-for="DestinationCity" class="form-control" />
                        <span asp-validation-for="DestinationCity" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group mb-2">
                        <label asp-for="DestinationZipCode" class="control-label"></label>
                        <input asp-for="DestinationZipCode" class="form-control" />
                        <span asp-validation-for="DestinationZipCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                     <div class="form-group mb-3">
                        <label asp-for="DestinationCountry" class="control-label"></label>
                        <input asp-for="DestinationCountry" class="form-control" />
                        <span asp-validation-for="DestinationCountry" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr />
            <h4>Package Details</h4>
            <div class="form-group mb-2">
                <label asp-for="PackageSize" class="control-label"></label>
                <select asp-for="PackageSize" asp-items="Html.GetEnumSelectList<PackageSize>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="PackageSize" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="WeightInKg" class="control-label"></label>
                <input asp-for="WeightInKg" class="form-control" />
                <span asp-validation-for="WeightInKg" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Send Package" class="btn btn-primary" />
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
