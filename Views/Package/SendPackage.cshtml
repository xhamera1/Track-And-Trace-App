@model SendPackageViewModel
@{
    ViewData["Title"] = "Send New Package";
}

<div class="page-header">
    <h1><i class="fas fa-shipping-fast me-3"></i>Send New Package</h1>
    <p>Fill out the form below to send a package to your recipient</p>
</div>

<div class="row">
    <div class="col-lg-10 mx-auto">
        <div class="card shadow-custom">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-box me-2"></i>Package Information</h5>
            </div>
            <div class="card-body">
                <form asp-action="SendPackage" method="post" id="sendPackageForm">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row">
                        <!-- Recipient Information -->
                        <div class="col-md-6">
                            <h6 class="text-primary mb-3"><i class="fas fa-user-check me-2"></i>Recipient Information</h6>
                            <div class="form-group mb-3">
                                <label asp-for="RecipientEmail" class="form-label">
                                    <i class="fas fa-envelope me-1"></i>Email Address
                                </label>
                                <input asp-for="RecipientEmail" class="form-control form-control-lg" placeholder="recipient@example.com" />
                                <span asp-validation-for="RecipientEmail" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="RecipientFirstName" class="form-label">
                                            <i class="fas fa-user me-1"></i>First Name
                                        </label>
                                        <input asp-for="RecipientFirstName" class="form-control form-control-lg" placeholder="First name" />
                                        <span asp-validation-for="RecipientFirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="RecipientLastName" class="form-label">
                                            <i class="fas fa-user me-1"></i>Last Name
                                        </label>
                                        <input asp-for="RecipientLastName" class="form-control form-control-lg" placeholder="Last name" />
                                        <span asp-validation-for="RecipientLastName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Package Details -->
                        <div class="col-md-6">
                            <h6 class="text-primary mb-3"><i class="fas fa-box-open me-2"></i>Package Details</h6>
                            <div class="form-group mb-3">
                                <label asp-for="PackageSize" class="form-label">
                                    <i class="fas fa-ruler-combined me-1"></i>Package Size
                                </label>
                                <select asp-for="PackageSize" asp-items="Html.GetEnumSelectList<PackageSize>()" class="form-select form-select-lg">
                                    <option selected="selected" value="">Select package size</option>
                                </select>
                                <span asp-validation-for="PackageSize" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="WeightInKg" class="form-label">
                                    <i class="fas fa-weight me-1"></i>Weight (kg)
                                </label>
                                <input asp-for="WeightInKg" class="form-control form-control-lg" placeholder="Enter weight in kg" step="0.1" />
                                <span asp-validation-for="WeightInKg" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Notes" class="form-label">
                                    <i class="fas fa-sticky-note me-1"></i>Notes (Optional)
                                </label>
                                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Additional notes or special instructions"></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="row">
                        <!-- Origin Address -->
                        <div class="col-md-6">
                            <h6 class="text-primary mb-3"><i class="fas fa-map-marker-alt me-2"></i>Origin Address</h6>
                            <div class="form-group mb-3">
                                <label asp-for="OriginStreet" class="form-label">
                                    <i class="fas fa-road me-1"></i>Street Address
                                </label>
                                <input asp-for="OriginStreet" class="form-control form-control-lg" placeholder="Enter street address" />
                                <span asp-validation-for="OriginStreet" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="OriginCity" class="form-label">
                                            <i class="fas fa-city me-1"></i>City
                                        </label>
                                        <input asp-for="OriginCity" class="form-control form-control-lg" placeholder="City" />
                                        <span asp-validation-for="OriginCity" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group mb-3">
                                        <label asp-for="OriginZipCode" class="form-label">
                                            <i class="fas fa-mail-bulk me-1"></i>Zip Code
                                        </label>
                                        <input asp-for="OriginZipCode" class="form-control form-control-lg" placeholder="Zip" />
                                        <span asp-validation-for="OriginZipCode" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group mb-3">
                                        <label asp-for="OriginCountry" class="form-label">
                                            <i class="fas fa-globe me-1"></i>Country
                                        </label>
                                        <input asp-for="OriginCountry" class="form-control form-control-lg" placeholder="Country" />
                                        <span asp-validation-for="OriginCountry" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Destination Address -->
                        <div class="col-md-6">
                            <h6 class="text-primary mb-3"><i class="fas fa-flag-checkered me-2"></i>Destination Address</h6>
                            <div class="form-group mb-3">
                                <label asp-for="DestinationStreet" class="form-label">
                                    <i class="fas fa-road me-1"></i>Street Address
                                </label>
                                <input asp-for="DestinationStreet" class="form-control form-control-lg" placeholder="Enter street address" />
                                <span asp-validation-for="DestinationStreet" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="DestinationCity" class="form-label">
                                            <i class="fas fa-city me-1"></i>City
                                        </label>
                                        <input asp-for="DestinationCity" class="form-control form-control-lg" placeholder="City" />
                                        <span asp-validation-for="DestinationCity" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group mb-3">
                                        <label asp-for="DestinationZipCode" class="form-label">
                                            <i class="fas fa-mail-bulk me-1"></i>Zip Code
                                        </label>
                                        <input asp-for="DestinationZipCode" class="form-control form-control-lg" placeholder="Zip" />
                                        <span asp-validation-for="DestinationZipCode" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group mb-3">
                                        <label asp-for="DestinationCountry" class="form-label">
                                            <i class="fas fa-globe me-1"></i>Country
                                        </label>
                                        <input asp-for="DestinationCountry" class="form-control form-control-lg" placeholder="Country" />
                                        <span asp-validation-for="DestinationCountry" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer bg-light">
                <div class="d-flex justify-content-between">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-times me-1"></i>Cancel
                    </a>
                    <button type="submit" form="sendPackageForm" class="btn btn-primary btn-lg">
                        <i class="fas fa-shipping-fast me-1"></i>Send Package
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
