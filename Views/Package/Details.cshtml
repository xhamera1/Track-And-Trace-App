@model _10.Models.Package

@{
    ViewData["Title"] = "Package Details";
}

<div class="page-header">
    <h1><i class="fas fa-box me-3"></i>Package Details</h1>
    <p>Track your package and view detailed information</p>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card shadow-custom">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Package Information</h5>
                    <span class="h4 mb-0">
                        <span class="status-badge badge-info">@Html.DisplayFor(model => model.CurrentStatus.Name)</span>
                    </span>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-primary mb-3"><i class="fas fa-clipboard-list me-2"></i>General Information</h6>
                        <dl class="row">
                            <dt class="col-sm-5">Tracking Number:</dt>
                            <dd class="col-sm-7">
                                <span class="fw-bold text-primary">@Html.DisplayFor(model => model.TrackingNumber)</span>
                            </dd>
                            <dt class="col-sm-5">Package Size:</dt>
                            <dd class="col-sm-7">@Html.DisplayFor(model => model.PackageSize)</dd>
                            @if (Model.WeightInKg.HasValue)
                            {
                                <dt class="col-sm-5">Weight:</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.WeightInKg) kg</dd>
                            }
                            <dt class="col-sm-5">Submission Date:</dt>
                            <dd class="col-sm-7">@Model.SubmissionDate.ToString("yyyy-MM-dd HH:mm")</dd>
                            @if (Model.DeliveryDate.HasValue)
                            {
                                <dt class="col-sm-5">Delivery Date:</dt>
                                <dd class="col-sm-7">
                                    <span class="text-success fw-medium">@Model.DeliveryDate.Value.ToString("yyyy-MM-dd HH:mm")</span>
                                </dd>
                            }
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-primary mb-3"><i class="fas fa-users me-2"></i>People Involved</h6>
                        <dl class="row">
                            <dt class="col-sm-4">Sender:</dt>
                            <dd class="col-sm-8">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-user-circle me-2 text-muted"></i>
                                    <div>
                                        <div class="fw-medium">@Html.DisplayFor(model => model.SenderUser.FirstName) @Html.DisplayFor(model => model.SenderUser.LastName)</div>
                                        <small class="text-muted">@Html.DisplayFor(model => model.SenderUser.Email)</small>
                                    </div>
                                </div>
                            </dd>
                            <dt class="col-sm-4">Recipient:</dt>
                            <dd class="col-sm-8">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-user-check me-2 text-muted"></i>
                                    <div>
                                        <div class="fw-medium">@Html.DisplayFor(model => model.RecipientUser.FirstName) @Html.DisplayFor(model => model.RecipientUser.LastName)</div>
                                        <small class="text-muted">@Html.DisplayFor(model => model.RecipientUser.Email)</small>
                                    </div>
                                </div>
                            </dd>
                            @if (Model.AssignedCourier != null)
                            {
                                <dt class="col-sm-4">Courier:</dt>
                                <dd class="col-sm-8">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-truck me-2 text-muted"></i>
                                        <div>
                                            <div class="fw-medium">@Html.DisplayFor(model => model.AssignedCourier.FirstName) @Html.DisplayFor(model => model.AssignedCourier.LastName)</div>
                                            <small class="text-muted">@Html.DisplayFor(model => model.AssignedCourier.Email)</small>
                                        </div>
                                    </div>
                                </dd>
                            }
                        </dl>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <hr />
                    <h6 class="text-primary mb-3"><i class="fas fa-sticky-note me-2"></i>Additional Notes</h6>
                    <div class="alert alert-light border">
                        @Html.DisplayFor(model => model.Notes)
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Address Information -->
<div class="row mt-4">
    <div class="col-md-6">
        <div class="card shadow-custom">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-map-marker-alt me-2"></i>Origin Address</h5>
            </div>
            <div class="card-body">
                <address class="mb-0">
                    <i class="fas fa-building me-2 text-muted"></i>
                    @Html.DisplayFor(model => model.OriginAddress.Street)<br>
                    <i class="fas fa-city me-2 text-muted"></i>
                    @Html.DisplayFor(model => model.OriginAddress.City), @Html.DisplayFor(model => model.OriginAddress.ZipCode)<br>
                    <i class="fas fa-globe me-2 text-muted"></i>
                    @Html.DisplayFor(model => model.OriginAddress.Country)
                </address>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card shadow-custom">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0"><i class="fas fa-flag-checkered me-2"></i>Destination Address</h5>
            </div>
            <div class="card-body">
                <address class="mb-0">
                    <i class="fas fa-building me-2 text-muted"></i>
                    @Html.DisplayFor(model => model.DestinationAddress.Street)<br>
                    <i class="fas fa-city me-2 text-muted"></i>
                    @Html.DisplayFor(model => model.DestinationAddress.City), @Html.DisplayFor(model => model.DestinationAddress.ZipCode)<br>
                    <i class="fas fa-globe me-2 text-muted"></i>
                    @Html.DisplayFor(model => model.DestinationAddress.Country)
                </address>
            </div>
        </div>
    </div>
</div>

<!-- Package History -->
@if (Model.History != null && Model.History.Any())
{
    <div class="row mt-4">
        <div class="col-lg-12">
            <div class="card shadow-custom">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-history me-2"></i>Package History</h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        @foreach (var historyEntry in Model.History.OrderByDescending(h => h.Timestamp))
                        {
                            <div class="timeline-item d-flex align-items-center mb-3 p-3 border-start border-3 border-primary bg-light rounded">
                                <div class="timeline-content flex-grow-1">
                                    <div class="row align-items-center">
                                        <div class="col-md-3">
                                            <small class="text-muted fw-medium">
                                                <i class="fas fa-clock me-1"></i>
                                                @historyEntry.Timestamp.ToString("yyyy-MM-dd HH:mm")
                                            </small>
                                        </div>
                                        <div class="col-md-4">
                                            <span class="status-badge badge-info">@historyEntry.Status.Name</span>
                                        </div>
                                        <div class="col-md-5">
                                            @if (historyEntry.Latitude.HasValue && historyEntry.Longitude.HasValue)
                                            {
                                                <small class="text-muted">
                                                    <i class="fas fa-map-pin me-1"></i>
                                                    @historyEntry.Latitude.Value.ToString("F6"), @historyEntry.Longitude.Value.ToString("F6")
                                                </small>
                                            }
                                            else
                                            {
                                                <small class="text-muted">
                                                    <i class="fas fa-map-pin me-1"></i>
                                                    Location: N/A
                                                </small>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row mt-4">
        <div class="col-lg-12">
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>No history available for this package.
            </div>
        </div>
    </div>
}

<!-- Action Buttons -->
<div class="row mt-4">
    <div class="col-lg-12">
        <div class="d-flex justify-content-between">
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary btn-lg">
                <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
            </a>
            @if (ViewContext.HttpContext.Session.GetString("UserRole") == "User")
            {
                <a asp-action="SendPackage" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-1"></i>Send New Package
                </a>
            }
        </div>
    </div>
</div>
</div>

<style>
    .timeline-item {
        padding: 10px;
        border-left: 3px solid #007bff;
        margin-left: 20px;
        background: #f8f9fa;
        border-radius: 5px;
    }

    .card-header i {
        margin-right: 8px;
    }

    .badge {
        font-size: 0.9em;
    }
</style>
